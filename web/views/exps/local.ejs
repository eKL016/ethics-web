<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/base.ejs %>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <% include ../partials/navbar.ejs %>
    <div class="container">
      <br><br>

      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
          <div class="card">
            <form action="/exps/local" method="post">
              <br><br>
              <div class="form-group row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <label for="code">請輸入主持人提供的實驗唯一代碼</label>
                </div>
                <div class="col-lg-1"></div>
              </div>
              <div class="form-group row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <input class="form-control" type="text" id="code" placeholder="實驗代碼" name="code">
                </div>
                <div class="col-lg-1"></div>
              </div>
              <div class="from-group row">
                <div class="col-lg-1"></div>
                <div class="col-lg-10">
                  <button type="submit" class="mx-auto btn btn-success btn-block">開始實驗</button>
                </div>
                <div class="col-lg-1"></div>
              </div>
              <br><br>
            </form>

          </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>
    <% include ../partials/bootstrap-scripts.ejs %>
  </body>
</html>
